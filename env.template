# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string from Aiven Cloud
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL="postgresql://avnadmin:YOUR_PASSWORD@YOUR_HOST.aivencloud.com:12345/defaultdb?sslmode=require"

# ============================================
# Redis/Valkey Configuration
# ============================================
# Valkey connection string from Aiven Cloud (Valkey is Redis-compatible)
# Note: Aiven uses Valkey instead of Redis - it's 100% compatible!
# Format: redis://username:password@host:port
# Use rediss:// for SSL connection
REDIS_URL="redis://avnadmin:YOUR_PASSWORD@YOUR_VALKEY_HOST.aivencloud.com:12345"

# ============================================
# JWT Authentication
# ============================================
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key-here-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-here-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV="production"
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN="https://your-production-frontend.com"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OpenAI Configuration (Optional)
# ============================================
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
SMTP_FROM="noreply@yourdomain.com"
APP_NAME="Manage Time App"
FRONTEND_URL="https://your-production-frontend.com"

# ============================================
# Firebase Configuration (Optional)
# ============================================
# Option 1: Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS="./taskmanager-firebase-adminsdk.json"

# Option 2: Environment variables
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# ============================================
# AWS S3 Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# ============================================
# Logging
# ============================================
LOG_LEVEL="info"

